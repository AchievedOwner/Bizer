@namespace Bizer.AspNetCore.Components
@inherits MenuComponentBase
<Bar Breakpoint="Breakpoint.Desktop" ThemeContrast="ThemeContrast" Background="Options.MenuBackground" Mode="BarMode.Horizontal">
    <Container Fluid>
        @if (BrandVisibile)
        {
            <BarBrand>
                @if (!string.IsNullOrEmpty(Options.AppLogoUrl))
                {
                    <img src="@Options.AppLogoUrl" alt="@Options.AppName" />
                }
                @Options.AppName
            </BarBrand>
        }
        <BarToggler />
        <BarMenu>
            @if (NavbarMenus.Any())
            {
                <BarStart>
                    <Menu Items="NavbarMenus" />
                </BarStart>
            }
            @if (InfoMenus.Any())
            {
                <BarEnd>
                    <Menu Items="InfoMenus" />
                </BarEnd>
            }
        </BarMenu>
    </Container>
</Bar>