@namespace Bizer.AspNetCore.Components
@foreach (var item in Items)
{
    if (item.Items.Any())
    {
        <MenuDropdownItem Items="item.Items" />
    }
    else
    {
        <BarItem>
            <MenuLinkItem Item="item" />
        </BarItem>
    }
}

@code {
    [Parameter][EditorRequired] public IEnumerable<MenuItem> Items{ get; set; }
}
