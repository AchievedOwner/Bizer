@namespace Bizer.AspNetCore.Components
@foreach (var item in Items)
{
    if (item.Items.Any())
    {
        <MenuDropdownItem Item="item" />
    }
    else
    {
        <BarItem>
            <BarLink To="@item.Link">
                <MenuTitle Item="item"/>
            </BarLink>
        </BarItem>
    }
}

@code {
    [Parameter][EditorRequired] public IEnumerable<MenuItem> Items{ get; set; }
}
