@namespace Bizer.AspNetCore.Components

@code {
    [Parameter][EditorRequired] public MenuItem Item { get; set; }
}
<li class="nav-item dropdown">
    <NavLink class="@($"nav-link {(Item.Disabled?"disabled":"")} dropdown-toggle")" href="javascript:;" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <MenuTitle Item="Item" />
    </NavLink>
    <ul class="dropdown-menu">

        @foreach (var subItem in Item.Items)
        {
            @if (subItem.Items.Any())
            {
                <MenuDropdownItem Item="subItem" />
            }
            else
            {
                <li>
                    @if (subItem.Divider)
                    {
                        <hr class="dropdown-divider">
                    }
                    else
                    {
                        <NavLink Match="NavLinkMatch.All" class="@($"dropdown-item {(subItem.Disabled?"disabled":"")}")" href="@subItem.Link">
                            <MenuTitle Item="subItem" />
                        </NavLink>
                    }
                </li>
            }
        }
    </ul>
</li>