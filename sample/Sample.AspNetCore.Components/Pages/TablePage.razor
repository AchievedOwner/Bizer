@page "/table"
<Table DataSource="Users" Hoverable>
    <HeaderTemplate>
        <tr>
            <th>Id</th>
            <th>名字</th>
        </tr>
    </HeaderTemplate>
    <RowTemplate>
        <td>
            @context.Id
        </td>
        <td>
            @context.Name
            </td>
    </RowTemplate>
</Table>

@code{
    class User
    {
        public Guid Id { get; set; }
        public string Name{ get; set; }
    }


    List<User> Users = new();

    protected override void OnInitialized()
    {
        for (int i = 0; i < 10; i++)
        {
            Users.Add(new() { Id=Guid.NewGuid(), Name = "test-" + i });
        }
    }
}